// sum() возвращает сумму введённых свойств.
// mul() возвращает произведение введённых свойств.

  function Calc (){
    this.read = function(){
      this.a = +prompt("Введите число a");
      this.b = +prompt("Введите число b");
    };
    this.sum = function(){
      return this.a + this.b;
    };
    this.min = function(){
      return this.a - this.b;
    };
    this.mul = function(){
      return this.a * this.b;
    };
    this.sum = function(){
      return this.a + this.b;
    };
  }
  	let calc = new Calc();
    calc.read();

